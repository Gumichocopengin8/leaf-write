{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "indentStyle": "space",
      "trailingCommas": "es5",
      "jsxQuoteStyle": "single",
      "lineWidth": 120
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "single",
      "indentStyle": "space",
      "lineWidth": 120
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none",
      "indentStyle": "space"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
